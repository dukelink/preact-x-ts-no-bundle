{
    "compilerOptions": {
        "target": "es6",  /* es5 works with IE!! */
        "module": "none", /* 'amd' works well in browser if we include requirejs but not needed yet... */
        "moduleResolution": "node",
        "sourceMap": false,
        "experimentalDecorators": true,
        "lib": ["es2016", "es6", "dom", "es5"],
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react",
        "jsxFactory": "h",
        "removeComments": true
    }, 
    "include": ["./**/*"]
}